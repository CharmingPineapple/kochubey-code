<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/outputText"
        android:layout_width="351dp"
        android:layout_height="261dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="32dp"
        android:hint="Здесь будет результат"
        android:textSize="18sp"
        android:textIsSelectable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/deleteAll"
        app:layout_constraintStart_toStartOf="@+id/doCipher"
        app:layout_constraintTop_toBottomOf="@+id/doCipher"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/inputText"
        android:layout_width="351dp"
        android:layout_height="261dp"
        android:layout_marginTop="28dp"
        android:hint="Введите текст"
        app:layout_constraintEnd_toEndOf="@+id/deleteAll"
        app:layout_constraintStart_toStartOf="@+id/doCipher"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/doCipher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="300dp"
        android:onClick="cipher"
        android:text="Code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/doUncipher"
        android:onClick="uncipher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="12dp"
        android:text="Uncode"
        app:layout_constraintEnd_toStartOf="@+id/deleteAll"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toEndOf="@+id/doCipher"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deleteAll"
        android:onClick="deleteAllTexts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="28dp"
        android:text="Delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="349dp"
        android:layout_height="23dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="31dp"
        android:text="Плез, пишите маленькими буквами."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="127dp"
        android:layout_height="24dp"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="32dp"
        android:text="ч, н, п, д, я, т - ?"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>